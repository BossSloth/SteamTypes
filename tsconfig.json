{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "EsNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "baseUrl": "src",
    "paths": {
      "Global/*": ["types/Global/*"],
      "Modules/*": ["types/Modules/*"],
      "Protobufs/*": ["types/Protobufs/*"],
      "shared/*": ["types/shared/*"],
      "SteamClient/*": ["types/SteamClient/*"],
      "SteamClient": ["types/SteamClient/index"],
      "@Runtime/*": ["Runtime/*"],
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
